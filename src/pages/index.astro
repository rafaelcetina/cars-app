---
import Layout from '../layouts/Layout.astro';
import { api } from '../lib/api';
import type { Brand } from '../types/api';

let brands: Brand[] = [];

try {
  brands = await api.getBrands();
} catch (error) {
  console.error('Error fetching brands:', error);
}
---

<Layout title="Brands - Cars App by Rafael Cetina">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">Brands</h1>
        <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
          Explore car brands and their models. Click on a brand to view its models.
        </p>
      </div>
    </div>

    <div class="mt-8">
      {
        brands.length > 0 ? (
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {brands.map(brand => (
              <a
                href={`/${brand.name.toLowerCase().replace(/\s+/g, '-')}`}
                class="block bg-white dark:bg-gray-800 shadow rounded-lg p-6 hover:shadow-lg transition-shadow duration-200 card"
              >
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                  {brand.name}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">Click to view models</p>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-500 dark:text-gray-400">No brands found</p>
          </div>
        )
      }
    </div>
  </div>
</Layout>
