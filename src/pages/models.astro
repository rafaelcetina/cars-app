---
import Layout from '../layouts/Layout.astro';
import ModelsClient from '../components/ModelsClient.svelte';
---

<Layout title="Models - Cars App">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">Models</h1>
        <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
          View and manage car models. Filter by price range or search for specific models.
        </p>
      </div>
    </div>
    
    <div class="mt-8">
      <ModelsClient client:only />
    </div>
  </div>
</Layout>
